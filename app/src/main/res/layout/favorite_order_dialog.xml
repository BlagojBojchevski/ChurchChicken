<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10">

        <TextView
                style="@style/TextViewMEDIUM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/save_to_favorite" />


        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/black50opacity" />


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10">

            <com.tts.gueststar.utility.CustomEditTextFavoriteOrderName
                android:id="@+id/etDiscountCode"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_toStartOf="@+id/btn_save"
                android:background="@android:color/transparent"
                android:hint="@string/hint_fav_name"
                android:inputType="text"
                android:maxLength="20"
                android:paddingStart="@dimen/dimen_5"
                android:paddingTop="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_5"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <RelativeLayout
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_button_yellow_new"
                android:paddingStart="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_5"
                android:paddingEnd="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_5"
                tools:ignore="RelativeOverlap">

                <TextView
                    style="@style/TextViewheavitas8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save" />

            </RelativeLayout>

        </RelativeLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/black50opacity" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10">


            <CheckBox
                    android:id="@+id/cbSaveAsDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@drawable/checkbox_selector"
                    android:padding="@dimen/dimen_2" />


            <TextView
                    android:id="@+id/save_as_default"
                    style="@style/TextView18Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:text="@string/save_as_default" />

        </LinearLayout>


        <RelativeLayout
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10">

            <TextView
                    android:id="@+id/txt_cancel"
                    style="@style/TextView18Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:text="@string/cancel" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>