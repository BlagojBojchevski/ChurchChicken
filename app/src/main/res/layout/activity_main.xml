<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">


    <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/item_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/home">

            <ImageView
                android:id="@+id/img_item_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/navigation_menu"
                android:src="@mipmap/home_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_rewards"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/rewards">

            <ImageView
                android:id="@+id/img_item_rewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/navigation_menu"
                android:src="@mipmap/rewards_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_order"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:contentDescription="@string/order">

            <ImageView
                android:id="@+id/img_item_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/navigation_menu"
                android:src="@mipmap/order_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/account">

            <ImageView
                android:id="@+id/img_item_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/navigation_menu"
                android:src="@mipmap/account_icon" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>