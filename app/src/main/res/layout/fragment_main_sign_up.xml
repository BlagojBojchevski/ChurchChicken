<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


    <RelativeLayout
            android:id="@+id/actionbar_main_signup"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/black"
            android:visibility="gone">

        <ImageView
                android:id="@+id/btn_close_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_10"
                android:contentDescription="@string/close_button"
                android:src="@drawable/close_icon" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_below="@+id/actionbar_main_signup"
            android:layout_above="@+id/bottom"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dimen_5"
            android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/welccome_logo"
            android:src="@mipmap/welcome_image" />
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:orientation="vertical">

        <TextView
                android:id="@+id/txt_get_started"
                style="@style/TextViewRegular23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/get_started" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">


            <RelativeLayout
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="@dimen/dimen_10"
                    android:background="@drawable/ic_sign_up"
                    android:paddingStart="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_7"
                    android:paddingEnd="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_7">

                <TextView
                    android:id="@+id/txt_login"
                    style="@style/ButtonTextBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:background="@drawable/ic_sign_up"
                    android:paddingStart="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_7"
                    android:paddingEnd="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_7">

                <TextView
                        android:id="@+id/txt_signup"
                        style="@style/ButtonTextBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/signup"
                        tools:ignore="RelativeOverlap" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>