<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10">

        <LinearLayout
                android:id="@+id/layoutRewardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_5"
                android:paddingEnd="@dimen/dimen_5">

            <TextView
                    android:id="@+id/tvRewardName"
                    style="@style/TitleRedBold18No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_2" />

            <TextView
                    android:id="@+id/tvRewardPoints"
                    style="@style/TextView12YellowBoldDarkblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_2"
                    android:visibility="gone" />

            <TextView
                    android:id="@+id/tvRewardExpiration"
                    style="@style/TextView12YellowBoldDarkblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/in_app_only"
                 />
        </LinearLayout>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20707070" />
</LinearLayout>