<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20"
        android:contentDescription="@string/tutorial_image"
        android:src="@mipmap/tutorial_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_how_to_redeem"
        style="@style/TutorialTextView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center"
        android:text="@string/how_to_redeem_rewards"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txt_how_to_redeem_desc"
        style="@style/TutorialTextView_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center"
        android:text="@string/how_to_redeem_rewards_txt"
        app:layout_constraintEnd_toEndOf="@+id/txt_how_to_redeem"
        app:layout_constraintStart_toStartOf="@+id/txt_how_to_redeem"
        app:layout_constraintTop_toBottomOf="@+id/txt_how_to_redeem" />

</androidx.constraintlayout.widget.ConstraintLayout>