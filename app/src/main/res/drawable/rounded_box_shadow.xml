<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:type="linear"
                    android:centerX="78%"
                    android:startColor="#B4E2E2E2" android:endColor="#b4fafafa" android:angle="90"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item
            android:left="3dp"
            android:right="3dp"
            android:top="3dp"
            android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>